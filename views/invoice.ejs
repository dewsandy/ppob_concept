    <!-- Invoice Start -->
    <section class="bg-invoice bg-light">
        <div class="container">
            <div class="row">
              <div class="col mt-4 pt-2" id="forms" >
                <div class="component-wrapper rounded shadow bg-white">
                    <div class="p-4 border-bottom">
                        <h4 class="title mb-0"> Forms Invoice</h4>
                    </div>
    
                    <div class="p-4">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <label>Product Name<span class="text-danger">*</span></label>
                                        <input disabled name="name" value="<%= data[0].nama_produk %>" id="product_name" type="text" class="form-control">
                                    </div>
                                </div><!--end col-->
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <label>Product Price <span class="text-danger">*</span></label>
                                        <input disabled name="product_name" value="<%= data[0].harga %>" id="product_price" type="text" class="form-control">
                                    </div>
                                </div><!--end col-->
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <label>Your Name <span class="text-danger">*</span></label>
                                        <input name="name" id="name" type="text" class="form-control" oninput="showCurrentValue(event)" placeholder="First Name :">
                                    </div>
                                </div><!--end col-->
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <label>Phone / ID</label>
                                        <input name="tel" id="tel" class="form-control" type="tels" oninput="idPel(event)" placeholder="08xx">
                                    </div>                                                                               
                                </div><!--end col-->
                            </div><!--end row-->
                          
                        </form><!--end form-->
                    </div>
                </div>
            </div>
          </div>
